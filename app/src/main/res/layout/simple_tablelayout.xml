<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="250dp"
    android:orientation="vertical">
    <TableLayout
        android:id="@+id/tabla_cuerpo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <TableRow
            android:id="@+id/superiorRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/three"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000">
            </TextView>
            <TextView
                android:id="@+id/six"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
            <TextView
                android:id="@+id/nine"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
        </TableRow>
        <TableRow
            android:id="@+id/middleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/two"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
            <TextView
                android:id="@+id/five"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
            <TextView
                android:id="@+id/eight"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
        </TableRow>
        <TableRow
            android:id="@+id/bottomRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/one"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>
            <TextView
                android:id="@+id/four"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textColor="#000"
                android:textAppearance="?android:attr/textAppearanceMedium">
            </TextView>

            <TextView
                android:id="@+id/seven"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:background="@drawable/cell_shape"
                android:padding="5dp"
                android:gravity="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000"></TextView>
        </TableRow>
    </TableLayout>
</LinearLayout>